<%= render "layouts/error_messages" %>
<%= form_with model: @post, local: true do |form| %>
  <form>
    <div class="product">
      <div class="form-tag"><%= form.label :product %></div>
      <%= form.text_field :product %>
    </div>
    <br>
    <div class="date">
      <div class="form-tag"><%= form.label :date %></div>
      <%= form.date_select :date, class: "form-control" %>
    </div>
    <br>
    <div class="start_time">
      <div class="form-tag"><%= form.label :start_time %></div>
      <%= form.date_select :start_time, class: "form-control" %>
    </div>
    <br>
    <div>
      <%= form.submit button_value, class: "btn btn-primary btn-block" %>
    </div>
  </form>
<% end %>
