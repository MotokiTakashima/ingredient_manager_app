<%= render "layouts/error_messages" %>
<%= form_with model: @post, local: true do |form| %>
  <div>
    <%= form.label :product %>
    <%= form.text_field :product, class: "form-control" %>
  </div>
  <div>
    <%= form.label :date %>
    <%= form.text_field :date, class: "form-control" %>
  </div>
  <div>
    <%= form.label :start_time %>
    <%= form.date_select :start_time, class: "form-control" %>
  </div>
  <div>
    <%= form.submit button_value, class: "btn btn-primary btn-block" %>
  </div>
<% end %>
