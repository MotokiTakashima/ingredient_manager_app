<h1>買い物リスト</h1>
<table>
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">タイトル</th>
      <th scope="col">備考</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @memos.each.with_index(1) do |memo, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= memo.title %></td>
        <td><%= memo.content %></td>
        <td>
          <%= link_to "変更", edit_memo_path(memo) %>
          <%= link_to "削除", memo, method: :delete, data: { confirm: "削除しますか?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<h3>新規投稿</h3>
<%= form_with model: @memo, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>
