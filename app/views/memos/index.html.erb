<div class="split-item split-left">
  <div class="split-left__inner">
    <h3>リスト追加</h3>
    <%= form_with model: @memo, local: true do |form| %>
      <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>
      <div>
        <%= form.label :content %>
        <%= form.text_field :content %>
      </div>
      <div>
        <%= form.submit "追加" %>
      </div>
    <% end %>
  </div>
</div>
<div class="split-item split-right">
  <div class="split-right__inner">
    <h1 class="text-center">買い物リスト</h1>
    <table class="table mt-4">
      <thead>
        <tr>
          <th scope="col">商品</th>
          <th scope="col">備考</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @memos.each do |memo| %>
          <tr>
            <td><%= link_to "#{memo.title}", edit_memo_path(memo) %></td>
            <td><%= memo.content %></td>
            <td class="botton">
              <%= link_to memo, method: :delete, class: "btn btn-outline-danger" do %>
                <i class="far fa-trash-alt"></i> <span class="d-none d-md-inline"> 削除</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
